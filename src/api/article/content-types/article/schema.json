    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "mappedBy": "articles"
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag",
      "mappedBy": "articles"
    },
    "text": {
      "type": "richtext"
    },
    "featured_image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "related_harf": {
      "type": "dynamiczone",
      "components": [
        "article.article"
      ]
    },
    "related_pravilo": {
      "type": "dynamiczone",
      "components": [
        "article.article"
      ]
    },
    "title_arabic": {
      "type": "string"
    }
